  <script>
    // Copy-to-clipboard for Contract Address
    function copyCA(){
      const input = document.getElementById('caInput');
      input.select(); input.setSelectionRange(0, 99999);
      const toast = document.getElementById('copyToast');
      const fallback = () => {
        navigator.clipboard.writeText(input.value).then(()=>{
          toast.textContent = 'Address copied!'; setTimeout(()=>toast.textContent='', 1600);
        });
      };
      try{
        const ok = document.execCommand('copy');
        if(ok){ toast.textContent='Address copied!'; setTimeout(()=>toast.textContent='',1600); }
        else{ fallback(); }
      }catch(e){ fallback(); }
    }

    // Falling $100 bills
    const field = document.getElementById('bill-field');
    const BILL_COUNT = 22; // how many bills on screen

    function spawnBill(){
      const d = document.createElement('div');
      d.className = 'bill';
      // random position / timing
      d.style.left = (Math.random()*100) + 'vw';
      const dur = 6 + Math.random()*7;          // 6s - 13s
      const delay = Math.random()*3;            // 0 - 3s
      const rotStart = Math.floor(Math.random()*360);
      d.style.animation = `fall ${dur}s linear ${delay}s forwards`;
      d.style.transform = `rotate(${rotStart}deg)`;
      // add the $ symbol as an inner element
      const sym = document.createElement('div');
      sym.className = 'usd';
      sym.textContent = '$';
      d.appendChild(sym);
      field.appendChild(d);

      d.addEventListener('animationend', ()=>{
        field.removeChild(d);
        // respawn another after a short random pause
        setTimeout(spawnBill, Math.random()*1200);
      });
    }

    for(let i=0;i<BILL_COUNT;i++) spawnBill();
  </script>
